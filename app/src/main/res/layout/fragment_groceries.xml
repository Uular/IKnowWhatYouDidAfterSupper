<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.oulu.cse.iknowwhatyoudidaftersupper.GroceriesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/GroceryInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Input new grocery..."
            />
        <Button
            android:id="@+id/GroceryAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_toRightOf="@id/GroceryInput"
            />
    </RelativeLayout>
    <ListView
        android:id="@+id/GroceryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</FrameLayout>
